/* pages/join/join.wxss */
.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
  padding-bottom: 200rpx;
}

/* 聚会信息 */
.gathering-info {
  margin-bottom: 40rpx;
  padding: 30rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.info-type {
  font-size: 32rpx;
}

.info-text {
  font-size: 28rpx;
  color: #666;
}

/* 输入昵称 */
.input-nickname {
  width: 100%;
  height: 96rpx;
  padding: 0 30rpx;
  background: #fff;
  border-radius: 16rpx;
  font-size: 30rpx;
  border: 1rpx solid #e0e0e0;
}

/* 位置设置 */
.location-box {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
}

.location-content {
  min-height: 100rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-icon {
  font-size: 32rpx;
}

.location-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.location-empty {
  color: #999;
  font-size: 30rpx;
}

.location-actions {
  display: flex;
  gap: 20rpx;
}

.btn-location {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 10rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  border: none;
}

.btn-location .btn-icon {
  font-size: 32rpx;
}

/* 参与者列表 */
.participant-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.participant-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.participant-item:last-child {
  border-bottom: none;
}

.participant-name {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
}

.participant-location {
  font-size: 26rpx;
  color: #999;
  text-align: right;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 底部操作 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.btn-join {
  width: 100%;
  margin-bottom: 20rpx;
}

.tips {
  text-align: center;
  font-size: 26rpx;
  color: #999;
}