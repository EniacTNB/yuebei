/* pages/create/create.wxss */
.container {
  padding: 30rpx;
  background: #f8f8f8;
  min-height: 100vh;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 34rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 24rpx;
}

/* 类型选择 */
.type-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.type-item {
  background: #fff;
  border: 2rpx solid #e0e0e0;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  transition: all 0.3s;
}

.type-item.active {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8787 100%);
  border-color: #FF6B6B;
}

.type-item.active .type-text {
  color: #fff;
}

.type-text {
  font-size: 30rpx;
  color: #333;
}

/* 位置设置 */
.location-box {
  background: #fff;
  padding: 30rpx;
  border-radius: 20rpx;
}

.location-content {
  min-height: 100rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.location-info {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.location-icon {
  font-size: 32rpx;
}

.location-text {
  flex: 1;
  font-size: 30rpx;
  color: #333;
  line-height: 1.5;
}

.location-empty {
  color: #999;
  font-size: 30rpx;
}

.location-actions {
  display: flex;
  gap: 20rpx;
}

.btn-location {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  padding: 20rpx 10rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #666;
  border: none;
}

.btn-location .btn-icon {
  font-size: 32rpx;
}

/* 底部操作 */
.bottom-action {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 30rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.btn-create {
  width: 100%;
  margin-bottom: 20rpx;
}

.tips {
  text-align: center;
  font-size: 26rpx;
  color: #999;
}