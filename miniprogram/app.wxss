/**app.wxss**/
page {
  background-color: #f8f8f8;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', sans-serif;
}

.container {
  padding: 20rpx;
  box-sizing: border-box;
}

/* 通用按钮样式 */
.btn-primary {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8787 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.btn-primary:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-secondary {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  color: #333333;
  font-size: 32rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.04);
}

/* 列表项 */
.list-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.list-item:last-child {
  border-bottom: none;
}

/* 标签 */
.tag {
  display: inline-block;
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  border-radius: 8rpx;
  margin-right: 12rpx;
}

.tag-primary {
  background: rgba(255, 107, 107, 0.1);
  color: #FF6B6B;
}

/* 加载动画 */
.loading {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 40rpx;
}

.loading-text {
  color: #999;
  font-size: 28rpx;
  margin-left: 16rpx;
}